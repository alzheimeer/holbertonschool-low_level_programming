#include "lists.h"

/**
 * add_nodeint - adds a new node at the beginning of the list
 * @head:
 * @n:
 * Return: address of the new element
 */
listint_t *add_nodeint(listint_t **head, const int n)
{

	listint_t *new;

	new = malloc(sizeof(listint_t));
	if (new == NULL)
	{
		printf("Error\n");
		return (1);
	}
	new->n = n;
	new->next = head;
	head = new;

	return (head);
}
